# Server
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3001


# Database
MONGODB_URI=mongodb://127.0.0.1:27017/smartbank

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this
JWT_REFRESH_EXPIRE=30d

# Email (SMTP) - Use ethereal.email for testing or real SMTP
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=your-ethereal-email
SMTP_PASS=your-ethereal-password

# Cloudinary (optional)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Twilio (optional - for SMS)
TWILIO_ACCOUNT_SID=AC1d38f53eb719326060da73b475077e0a
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=your-twilio-number

# Encryption (for development)
ENCRYPTION_KEY=your-32-character-encryption-key-for-aes
ENCRYPTION_IV=your-16-character-iv

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# File Upload
MAX_FILE_SIZE=5242880 # 5MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf